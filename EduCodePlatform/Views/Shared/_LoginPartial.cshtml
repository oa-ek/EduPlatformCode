@using Microsoft.AspNetCore.Identity
@using EduCodePlatform.Models.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <!-- Якщо користувач залогінений -->
    <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage Account">
                    Hello, @User.Identity.Name!
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link btn btn-link text-dark" id="logoutButton">
                    Logout
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <!-- Якщо користувач НЕ залогінений -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    </ul>
}
